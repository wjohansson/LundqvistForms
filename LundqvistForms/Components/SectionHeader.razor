@using FormsLibrary.Models;

<div @onfocusin="@CheckFocus" @onfocusout="@(() => border = "none")" class="section w-100 text-white rounded-end p-3" style="background-color: rgb(50, 50, 50)">

    <EditForm Model="@form">
        <DataAnnotationsValidator />
        <div class="d-flex flex-column d-flex gap-2">
            <div class="form-group row d-flex">
                <div class="form-group col">
                    <InputText placeholder="Rubrik..." id="title" @bind-Value="form.FormTitle" class="form-control border-none lh-lg text-white" style="font-size: 28px" />
                    <ValidationMessage For="@(() => form.FormTitle)" />
                </div>


            </div>
            <div class="form-group row d-flex">

                <div class="form-group col">
                    <InputText placeholder="Beskrivning..." id="description" @bind-Value="form.FormDescription" class="form-control lh-sm text-white" />
                    <ValidationMessage For="@(() => form.FormDescription)" />

                </div>
            </div>
        </div>
    </EditForm>

</div>

<style>
    .section {
        border-left: @border;
    }
</style>

@code {
    private FormModel form = new FormModel();
    private string border = "none";

    private void CheckFocus()
    {
        if (form.IsFocused)
        {
            border = "4px solid white";
        }
    }
}
