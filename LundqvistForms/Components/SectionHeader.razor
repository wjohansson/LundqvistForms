@using FormsLibrary.Models;

<MudContainer @onfocusin="@(() => borderColor = Colors.Grey.Lighten5)" @onfocusout="@(() => borderColor = Colors.Grey.Darken1)" Class="text-white rounded pa-0" Style="@($"border-inline-start: 4px solid {borderColor};")">
    <EditForm Model="@form">
        <DataAnnotationsValidator />
        <MudCard Elevation="0">
            <MudCardContent Style="@($"background-color: {Colors.Grey.Darken1};")">
                <MudTextField Placeholder="Rubrik..."
                              @bind-Value="form.FormTitle"
                              AdornmentColor="Color.Warning"
                              For="@(() => form.FormTitle)"
                              Style="@($"color: {Colors.Grey.Lighten4}")" 
                              Class=""/>
                <MudTextField Placeholder="Beskrivning..."
                              @bind-Value="form.FormDescription"
                              For="@(() => form.FormDescription)"
                              Style="@($"color: {Colors.Grey.Lighten5}")" />
            </MudCardContent>
        </MudCard>

    </EditForm>

</MudContainer>

@code {
    // TODO: Ändra färg på texten till vit
    [Parameter]
    public bool IsFocused { get; set; }
    private FormModel form = new FormModel();
    private string borderColor = Colors.Grey.Darken1;
}
