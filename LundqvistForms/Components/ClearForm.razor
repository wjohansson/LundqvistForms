@using FormsLibrary.Models;
@using LundqvistForms.Pages;
@using LundqvistForms.Services;
@inject FormServiceUi formService
@inject NavigationManager navigationManager;

<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Avbryt</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="ClearCurrentForm">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = new();

    [Parameter]
    public string ContentText { get; set; } = "";

    [Parameter]
    public string ButtonText { get; set; } = "";

    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public FormModel Form { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    private void ClearCurrentForm()
    {
        Form = new();
        Form.FormTitle = "Formulär utan namn";
        Form.FormDescription = "Ingen beskrivning";
        navigationManager.NavigateTo("/", true);
        Submit();
    }
}
